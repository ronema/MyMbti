/* pages/about/about.wxss */
page {
  background: linear-gradient(135deg, #e6f2ff 0%, #b0e0e6 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1E90FF;
  margin-bottom: 40rpx;
  text-align: center;
}

.section {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1E90FF;
  margin-bottom: 20rpx;
  border-bottom: 4rpx solid #1E90FF;
  padding-bottom: 10rpx;
}

.description {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

.dimension-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(30, 144, 255, 0.2);
}

.dimension-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.dimension-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #1E90FF;
  margin-right: 15rpx;
}

.dimension-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.loading-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1E90FF;
  font-size: 30rpx;
  padding: 30rpx;
}